<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@color/trans</item>

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <item name="android:theme">@android:style/Theme.NoTitleBar</item>
    <item name="android:colorPrimary">@color/trans</item>
    <item name="android:colorPrimaryDark">@color/trans</item>
    <item name="android:colorAccent">@color/trans</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    </style>





</resources>

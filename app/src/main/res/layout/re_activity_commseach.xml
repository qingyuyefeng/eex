<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_comm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:orientation="vertical">


    <com.eex.common.view.NewComTitleBar
        android:id="@+id/search_comm_titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="@string/assets_seach" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_10dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:src="@mipmap/image_search" />


            <EditText
                android:id="@+id/search_comm_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_30dp"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="搜索币种"
                android:singleLine="true"
                android:textColor="@color/main_title2"
                android:textColorHint="@color/main_title1"
                android:textSize="@dimen/text_16sp" />


            <TextView
                android:id="@+id/search_comm_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_20dp"
                android:text="@string/cancel"
                android:textColor="@color/main_title1"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_comm_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="300dp"
        android:background="@color/activity_marginTop_da"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TX1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/myz_zoeckb"
                    android:gravity="center"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/appbar_background3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别1认证"
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:text="无提币,提现额度"
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TX2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/myz_grund"
                    android:gravity="center"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:id="@+id/tx_hoer"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别2认证"
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/txLoveOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:id="@+id/txLoveOneBtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TX3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/myz_grund"
                    android:gravity="center"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/activity_marginTop_da" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="级别3认证"
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/txTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_10sp" />

                <TextView
                    android:id="@+id/txTwobtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="@color/main_dialog"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:textColor="@color/background_baise"
                android:text="继续认证"
                android:background="@drawable/backbtn" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

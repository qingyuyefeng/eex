<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">
    <!-- 导航栏 -->

    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">


    </com.eex.common.view.ComTitleBar>

    <!--号码归属地-->
    <LinearLayout
        android:id="@+id/real_Phone_LL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0dp"
            android:layout_margin="@dimen/layout_15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/guojiadiqu"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/textview_PhoneTitle"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_15dp"
                    android:layout_weight="3.5"
                    android:text="@string/dalu"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cq_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>
    <!--号码归属地-->
    <LinearLayout
        android:id="@+id/ll_Phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/LL_PHONE"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guojia_name"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20dp"
                android:layout_weight="1"
                android:text="China (中国大陆)"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tx_name_nuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="+86"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_20dp"
                android:src="@drawable/cq_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_25dp"
            android:layout_marginRight="@dimen/layout_25dp"
            android:background="#71757d" />
    </LinearLayout>
    <!--手机号码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="1"
                android:text="@string/shoujihao"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="@string/qingshoujihao"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>
    <!--验证码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="1"
                android:text="@string/verification_code"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/edt_YZM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2.5"
                android:background="@null"
                android:hint="@string/saa"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

            <Button
                android:id="@+id/btn_YZM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="1"
                android:background="@color/activity_marginTop_da"
                android:text="发送验证码"
                android:textColor="@color/appbar_background3" />
        </LinearLayout>
    </LinearLayout>
    <!--绑定手机-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_18dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_18dp"
            android:text="@string/uiding"
            android:textColor="@color/text_list_item_desc"
            android:textSize="@dimen/text_14sp" />

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/backbtn"
            android:text="@string/bind_phone"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_18sp" />
    </LinearLayout>

    <View
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appbar_background2"
        android:visibility="visible" />
</LinearLayout>

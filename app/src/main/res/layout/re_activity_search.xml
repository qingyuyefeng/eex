<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/layout_10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:src="@mipmap/search" />


        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_40dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="搜索币种"
            android:textColor="@color/main_title2"
            android:textColorHint="@color/search_color"
            android:textSize="@dimen/text_16sp" />


        <TextView
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_20dp"
            android:text="@string/cancel"
            android:textColor="@color/search_color"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_5dp"
        android:background="@color/main_title1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_20dp"
        android:text="最近查看"
        android:textColor="@color/search_color"
        android:textSize="@dimen/text_12sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp">


    </android.support.v7.widget.RecyclerView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f4f9"
    android:orientation="vertical">

    <com.eex.common.view.NewComTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="@string/mine_trading_record" />

    <LinearLayout
        android:id="@+id/ll_coin_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_20dp"
        android:paddingRight="@dimen/layout_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="@string/coin_money_orders"
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_12sp" />

        <ImageView
            android:layout_width="@dimen/layout_6dp"
            android:layout_height="@dimen/layout_12dp"
            android:src="@drawable/cq_right"
            android:tint="@color/main_title2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_futures"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_20dp"
        android:paddingRight="@dimen/layout_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="@string/futures_orders"
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_12sp" />

        <ImageView
            android:layout_width="@dimen/layout_6dp"
            android:layout_height="@dimen/layout_12dp"
            android:src="@drawable/cq_right"
            android:tint="@color/main_title2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_legal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/layout_5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_20dp"
        android:paddingRight="@dimen/layout_10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="@string/legal_orders"
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_12sp" />

        <ImageView
            android:layout_width="@dimen/layout_6dp"
            android:layout_height="@dimen/layout_12dp"
            android:src="@drawable/cq_right"
            android:tint="@color/main_title2" />
    </LinearLayout>
</LinearLayout>
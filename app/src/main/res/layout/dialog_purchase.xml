<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical">
    <!--确认发布购买广告-->
    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="276dp"
        android:background="@drawable/c2c_item_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="确认发布购买广告"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/layout_15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fenge" />
        <!--购买单价-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买单价:"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/UnitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888CNY"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
        <!--购买数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量:"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/Nuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="888BTC"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
        <!--单笔交易限额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单笔交易限额:"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/Quota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000CNY-30000CNY"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
        <!--确认发布-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_dimss"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_grd"
                    android:text="取消"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_13sp" />

                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:background="@drawable/backbtn"
                    android:text="确认发布"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

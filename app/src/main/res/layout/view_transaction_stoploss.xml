<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">
  <!--触发价-->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="5dp"
    android:background="@color/color_f2f4f9"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/btn_trigger_subtract"
      android:layout_width="36dp"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="-"
      android:textColor="@color/color_4d6599"
      android:textSize="@dimen/text_16sp" />

    <EditText
      android:id="@+id/edit_trigger_price"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/layout_5dp"
      android:layout_weight="1"
      android:background="@null"
      android:gravity="center"
      android:hint="触发价"
        android:inputType="numberDecimal|numberSigned"
      android:textColor="@color/color_4d6599"
      android:textColorHint="@color/color_cfd6e6"
      android:textSize="@dimen/text_13sp" />

    <TextView
      android:id="@+id/btn_trigger_add"
      android:layout_width="36dp"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="+"
      android:textColor="@color/color_4d6599"
      android:textSize="@dimen/text_16sp" />
  </LinearLayout>

  <TextView
    android:id="@+id/trigger_amount_valuation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textColor="@color/color_cfd6e6"
    android:textSize="@dimen/text_10sp"
    android:visibility="visible"
    tools:text="估值:￥0" />
</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edt_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/text_10sp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EBT-CNY"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_10sp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="center"
                android:text="买"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_Sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.78888"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/text_10sp">

        <TextView
            android:id="@+id/text_nuber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量:0"
            android:textColor="@color/text_gray_tip"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/text_resnuber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:textColor="@color/text_gray_tip"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_10sp"
        android:layout_marginBottom="@dimen/text_10sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_10sp"
            android:layout_weight="1"
            android:text="2018-8-10"
            android:textColor="@color/text_gray_tip"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tx_no"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/text_10sp"
            android:background="@color/K_red"
            android:gravity="center"
            android:text="撤单"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_typedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_10sp"
            android:text="已完成"
            android:textColor="@color/text_gray_tip"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:background="@drawable/c2c_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tltle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="请确认您是否已经汇款至卖家账户,等待卖家确认收款后即可释放货币"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/Trade_ed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_50dp"
            android:layout_marginTop="@dimen/layout_20dp"
            android:background="@null"
            android:hint="请输入交易密码"
            android:padding="@dimen/layout_10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_30dp"
            android:layout_marginBottom="@dimen/layout_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dimss"
                android:layout_width="120dp"
                android:layout_height="@dimen/layout_38dp"
                android:background="@drawable/btn_grd"
                android:text="取消"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_13sp" />

            <Button
                android:id="@+id/Trade_sell"
                android:layout_width="120dp"
                android:layout_height="@dimen/layout_38dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:background="@drawable/backbtn"
                android:text="确认"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
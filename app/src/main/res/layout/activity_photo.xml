<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_marginTop_da"
    android:orientation="vertical">
    <!-- 导航栏 -->
    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">

    </com.eex.common.view.ComTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="姓:"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/surname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="张"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="名:"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/givename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="三"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_15dp">

                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/benrenz"
                    android:textColor="@color/background_baise" />

                <LinearLayout
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="@dimen/layout_108dp"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_one"
                        android:layout_width="240dp"
                        android:layout_height="@dimen/layout_108dp"
                        android:src="@drawable/cq_idcard_b1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1dp"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_marginRight="@dimen/layout_15dp"
                android:background="@color/appbar_background1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_15dp">

                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/fan"
                    android:textColor="@color/background_baise" />

                <LinearLayout
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="108dp"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_two"
                        android:layout_width="240dp"
                        android:layout_height="@dimen/layout_108dp"
                        android:src="@drawable/cq_idcard_b" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_1dp"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_marginRight="@dimen/layout_15dp"
                android:background="@color/appbar_background1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/layout_15dp">

                <TextView
                    android:id="@+id/tx3"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="@string/shouc"
                    android:textColor="@color/background_baise" />

                <LinearLayout
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="@dimen/layout_108dp"
                    android:layout_weight="10">

                    <ImageView
                        android:id="@+id/img_Three"
                        android:layout_width="240dp"
                        android:layout_height="@dimen/layout_108dp"
                        android:src="@drawable/cq_idcard_b2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--提交认证-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/layout_10dp"
        android:layout_weight="9.9"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TXtost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/next_btn"
            android:layout_marginBottom="@dimen/layout_10dp"
            android:gravity="center"
            android:text="请确保您使用本人的真实身份进行验证，我们会保护您的个人信息安全。"
            android:textColor="@color/text_list_item_desc"
            android:textSize="@dimen/text_14sp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:layout_alignParentBottom="true"
            android:background="#ff4329"
            android:text="提交认证"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_18sp" />
    </RelativeLayout>
</LinearLayout>

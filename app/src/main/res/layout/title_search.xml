<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_base_toolber"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_50dp"
    android:background="@drawable/background_green"
    android:gravity="center"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/header_return_RL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/header_return_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:gravity="center|left"
            android:src="@drawable/ico_activity2_arrow1"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="5"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:src="@drawable/sousuo2x" />

        <EditText
            android:id="@+id/header_campaign_search_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:background="@null"
            android:hint="搜索币种"
            android:singleLine="true"
            android:textColor="@color/background_baise"
            android:textColorHint="@color/text_list_item_title"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_header_campaign_search1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left" />


        <TextView
            android:id="@+id/main_header_search_qingkong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/appbar_text"
            android:textSize="@dimen/text_18sp"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_dayfee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="每日利息"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/tx_nuber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1BTC"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2018-12-08"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/tx_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已核算"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tx_deltw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@color/myzoe_listview_backgroung" />
</LinearLayout>

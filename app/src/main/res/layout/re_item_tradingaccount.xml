<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_48dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/item_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_img_tilte"
                android:layout_width="@dimen/layout_20dp"
                android:layout_height="@dimen/layout_20dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:visibility="visible" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNY"
                    android:textColor="@color/main_title2"
                    android:textSize="@dimen/text_17sp" />

                <TextView
                    android:id="@+id/item_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(CNY)"
                    android:layout_marginTop="@dimen/layout_3dp"
                    android:textColor="@color/main_title1"
                    android:textSize="@dimen/text_10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_available1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="@string/assets_available1"
                    android:textColor="@color/main_title1"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/item_Nowmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_20dp"
                    android:text="000000"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_30dp"
            android:layout_marginRight="@dimen/layout_20dp"
            android:background="@color/main_title1" />

    </LinearLayout>
</LinearLayout>

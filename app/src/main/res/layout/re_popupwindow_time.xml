<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/layout_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvew_phone"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/color_333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:gravity="center"
            android:text="@string/verification_code"
            android:textColor="@color/color_0080ff"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edt_YZM"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingRight="@dimen/layout_40dp"
            android:hint="@string/login_yzm"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10"
            android:textColor="@color/color_0080ff"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/btn_YZM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_5dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/shape_textview_bule"
            android:text="@string/get_code"
            android:textColor="@color/color_0080ff"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_30dp"
        android:padding="@dimen/layout_15dp">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_48dp"
            android:background="@mipmap/login_btn_roung"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="150dp"
        android:background="@drawable/c2c_item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tltle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7ebit临时维护中，请稍后再试"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/layout_15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/fenge" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginBottom="@dimen/layout_20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:background="@drawable/backbtn"
                    android:text="确认"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">
    <!-- 导航栏 -->
    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">

    </com.eex.common.view.ComTitleBar>

    <LinearLayout
        android:id="@+id/BiList_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_10dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sas"
                android:textColor="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_14sp" />


            <TextView
                android:id="@+id/tx_BiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_5dp"
                android:text="@string/xuanzbi"
                android:textColor="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_15dp"
                android:src="@drawable/cq_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/qianbaodd"
                android:textColor="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/ed_moneyAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="@string/shuruqianbao"
                android:textColor="@color/tra_main_login_text_gray"
                android:textColorHint="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_14sp" />


            <ImageView
                android:id="@+id/Mention_money_scanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_10dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_10dp"
                android:src="@mipmap/money_scanning" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_1dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/activity_marginTop_da"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="备注"
            android:textColor="@color/tra_main_login_text_gray"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/ed_Remarks"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_weight="3"
            android:background="@null"
            android:textColor="@color/tra_main_login_text_gray"
            android:textColorHint="@color/tra_main_login_text_gray"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_AddAdress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:layout_margin="@dimen/layout_15dp"
        android:background="@color/appbar_background3"
        android:text="@string/quere"
        android:textColor="@color/background_baise"
        android:textSize="@dimen/text_16sp" />
</LinearLayout>

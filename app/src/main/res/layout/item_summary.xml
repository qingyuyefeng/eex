<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_10dp"
        android:paddingBottom="@dimen/layout_10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_biName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_biNuber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/textView_biProportion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_15dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
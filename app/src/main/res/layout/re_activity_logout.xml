<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_f2f4f9"
    android:orientation="vertical">

    <com.eex.common.view.NewComTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="@string/settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="@string/version_message"
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_10sp"
            android:text=""
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="@string/current_language"
            android:textColor="@color/main_title2"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="简体中文"
            android:textColor="@color/color_cfd6e6"
            android:textSize="@dimen/text_13sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginLeft="@dimen/layout_5dp"
            android:src="@mipmap/cq_right"
            android:tint="@color/color_4d6599"/>
    </LinearLayout>

        <Button
            android:id="@+id/btn_OutLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_40dp"
            android:layout_margin="@dimen/layout_20dp"
            android:background="@drawable/backbtn"
            android:text="@string/logout"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_13sp" />

</LinearLayout>

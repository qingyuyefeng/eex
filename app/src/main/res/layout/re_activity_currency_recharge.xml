<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    android:orientation="vertical">


    <com.eex.common.view.NewComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chargemone_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginBottom="@dimen/layout_30dp"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/layout_10dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/layout_5dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/Currency_name"
                    android:textColor="@color/mine_item_text"
                    android:textSize="@dimen/text_12sp" />

                <TextView
                    android:id="@+id/chargemone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="AA"
                    android:textColor="@color/mine_item_text"
                    android:textSize="@dimen/text_12sp" />


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/down_triangle" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20dp"
                android:layout_marginTop="@dimen/layout_15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@color/grey1"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/recharge_erimage"
                        android:layout_width="132dp"
                        android:layout_height="132dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/layout_5dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/Currency_iphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_15dp"
                    android:layout_marginBottom="@dimen/layout_20dp"
                    android:background="@color/grey1"
                    android:padding="@dimen/layout_10dp"
                    android:text="@string/Currency_iphone"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20dp"
                android:layout_marginTop="@dimen/layout_15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@color/color_f2f4f9"
                    android:layout_marginRight="@dimen/layout_20dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_marginTop="@dimen/layout_20dp"
                        android:text="充币地址"
                        android:textColor="@color/color_4d6599"
                        android:textSize="@dimen/text_12sp" />


                    <TextView
                        android:id="@+id/recharge_addres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:layout_marginTop="@dimen/layout_15dp"
                        android:layout_marginRight="@dimen/layout_20dp"
                        android:layout_marginBottom="@dimen/layout_20dp"
                        android:text="0x6588f10x6588f109de678c70x6588f109de678c70x6588f109de678c709de678c7"
                        android:textColor="@color/login_btn"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Currency_copy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_15dp"
                    android:layout_marginBottom="@dimen/layout_20dp"
                    android:layout_marginRight="@dimen/layout_20dp"
                    android:background="@color/grey1"
                    android:gravity="center"
                    android:padding="@dimen/layout_10dp"
                    android:text="@string/Currency_copy"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_40dp"
                android:layout_marginTop="@dimen/layout_20dp"
                android:text="@string/Currency_first"
                android:textColor="#ffcc3333"
                android:textSize="@dimen/text_12sp" />


            <TextView
                android:id="@+id/Currency_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_40dp"
                android:layout_marginTop="@dimen/layout_10dp"
                android:layout_marginBottom="@dimen/layout_20dp"
                android:text="@string/Currency_two"
                android:textColor="#ffcc3333"
                android:textSize="@dimen/text_12sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
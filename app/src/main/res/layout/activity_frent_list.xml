<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">

    </com.eex.common.view.ComTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:text=""
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tx_tofrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18***56"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_13sp"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/frentRecyClerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/appbar_background"
        android:dividerHeight="1px"
        android:fadeScrollbars="false"
        android:scrollbars="none"></ListView>
</LinearLayout>

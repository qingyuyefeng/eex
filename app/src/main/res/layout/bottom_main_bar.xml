<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/divider_1" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_selector"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/home"
            android:textColor="@drawable/home_selector_text_color"
            android:textSize="@dimen/text_12sp" />

        <RadioButton
            android:id="@+id/market_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/market_selector"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/market"
            android:textColor="@drawable/home_selector_text_color"
            android:textSize="@dimen/text_12sp" />

        <RadioButton
            android:id="@+id/notice_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/assets_selector"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/trading"
            android:textColor="@drawable/home_selector_text_color"
            android:textSize="@dimen/text_12sp" />


        <RadioButton
            android:id="@+id/assets_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/notice_selector"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/assets"
            android:textColor="@drawable/home_selector_text_color"
            android:textSize="@dimen/text_12sp" />

        <RadioButton
            android:id="@+id/mine_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mine_selector"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="@string/mine"
            android:textColor="@drawable/home_selector_text_color"
            android:textSize="@dimen/text_12sp" />


    </RadioGroup>

</LinearLayout>
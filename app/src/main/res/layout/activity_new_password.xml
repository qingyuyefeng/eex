<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">

    </com.eex.common.view.ComTitleBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:layout_marginTop="@dimen/layout_5dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_54dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2"
                android:text="绑定手机号"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/Edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_25dp"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入绑定手机号"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

            <Button
                android:id="@+id/btn_new_psword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="1.5"
                android:background="@color/activity_marginTop_da"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/appbar_background3"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_54dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2"
                android:text="验证码"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/edit_YZM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_54dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2"
                android:text="@string/caonima"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/OriginalPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="@string/newaonima"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_54dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2"
                android:text="@string/newmima"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="@string/please_input_need_password"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@color/appbar_background1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:background="@color/activity_marginTop_da"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_15dp"
                android:layout_weight="2"
                android:text="@string/newmima"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/NEWnewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/layout_15dp"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="@string/zaicishuru"
                android:textColor="@color/background_baise"
                android:textColorHint="@color/text_list_item_desc"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_15dp"
        android:background="@color/activity_marginTop_da"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/backbtn"
            android:text="@string/sure"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appbar_background2" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_f2f4f9"
    android:orientation="vertical">
    <!-- 导航栏 -->
    <com.eex.common.view.NewComTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="@string/mine_mention_money_address" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/layout_30dp"
            android:paddingTop="@dimen/layout_40dp"
            android:paddingRight="@dimen/layout_30dp"
            android:paddingBottom="@dimen/layout_40dp">

            <TextView
                style="@style/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/virtual_currency_type" />

            <TextView
                android:id="@+id/tv_coin_type"
                style="@style/normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_30dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/color_f2f4f9"
                android:drawableRight="@mipmap/down_triangle"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/layout_10dp"
                android:paddingRight="@dimen/layout_10dp"
                tools:text="EBX" />

            <TextView
                style="@style/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                android:text="@string/wallet_address" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_30dp"
                android:layout_marginTop="@dimen/layout_5dp">
                <EditText
                    android:id="@+id/et_wallet_address"
                    style="@style/normal_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/layout_30dp"
                    android:background="@color/color_f2f4f9"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/layout_10dp"
                    android:textColorHint="@color/color_cfd6e6" />
                <ImageView
                    android:id="@+id/iv_sao"
                    android:layout_width="@dimen/layout_30dp"
                    android:layout_height="@dimen/layout_30dp"
                    android:layout_marginLeft="@dimen/layout_20dp"
                    android:src="@mipmap/wallet_addr"/>
            </LinearLayout>


            <TextView
                style="@style/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                android:text="@string/remark" />


            <EditText
                android:id="@+id/et_remark"
                style="@style/normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_30dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/color_f2f4f9"
                android:maxLines="1"
                android:paddingLeft="@dimen/layout_10dp"
                android:textColorHint="@color/color_cfd6e6" />

            <Button
                android:id="@+id/btn_add_addr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_30dp"
                android:layout_marginTop="@dimen/layout_40dp"
                android:background="@drawable/backbtn"
                android:text="@string/sure_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:layout_marginTop="@dimen/layout_30dp"
        android:text="@string/addr_tip"
        android:lineSpacingExtra="@dimen/layout_2dp"
        android:textColor="@color/color_cc3333"
        android:textSize="@dimen/text_12sp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--币种-->
            <LinearLayout
                android:id="@+id/LL_coin"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="币种"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tx_coinName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="请选择币种"
                            android:textColor="@color/background_baise"
                            android:textSize="@dimen/text_14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cq_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_1dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@color/fenge" />
            </LinearLayout>
            <!--您的报价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:text="您的报价"
                            android:textColor="@color/background_baise"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(CNY)"
                            android:textColor="@color/money_name"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edt_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="价格"
                        android:textColor="@color/appbar_background3"
                        android:textColorHint="@color/money_name"
                        android:textSize="@dimen/text_13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_1dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@color/fenge" />
            </LinearLayout>
            <!--溢价比例-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:text="溢价比例"
                            android:textColor="@color/background_baise"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(%)"
                            android:textColor="@color/money_name"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>
                    <!--请输入溢价比例-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/tx_Premium"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@null"
                            android:digits="@string/filter_vcode3"
                            android:hint="请输入溢价比例"
                            android:textColor="@color/background_baise"
                            android:textColorHint="@color/money_name"
                            android:textSize="@dimen/text_14sp" />

                        <LinearLayout
                            android:id="@+id/LLPremium"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/layout_10dp"
                                android:src="@drawable/yijia" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_1dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@color/fenge" />
            </LinearLayout>
            <!--出售数量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:text="出售数量"
                            android:textColor="@color/background_baise"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/coinName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/money_name"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_Nuber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="@string/filter_vcode2"
                        android:hint="请输入出售数量"
                        android:textColor="@color/background_baise"
                        android:textColorHint="@color/money_name"
                        android:textSize="@dimen/text_13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_1dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@color/fenge" />
            </LinearLayout>
            <!--总金额-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_10dp"
                            android:text="总金额"
                            android:textColor="@color/background_baise"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(CNY)"
                            android:textColor="@color/money_name"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/appbar_background3"
                        android:textSize="@dimen/text_13sp" />

                </LinearLayout>
            </LinearLayout>
            <!--单笔交易最低额度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="单笔交易最低额度"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/unit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(CNY)"
                        android:textColor="@color/money_name"
                        android:textSize="@dimen/text_13sp" />

                    <EditText
                        android:id="@+id/minimum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/layout_20dp"
                        android:background="@null"
                        android:digits="@string/filter_vcode2"
                        android:hint="单笔最低"
                        android:textColor="@color/background_baise"
                        android:textColorHint="@color/money_name"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_1dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@color/fenge" />
            </LinearLayout>
            <!--单笔交易最高额度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/edt_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_10dp"
                        android:text="单笔交易最高额度"
                        android:textColor="@color/background_baise"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/unit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(CNY)"
                        android:textColor="@color/money_name"
                        android:textSize="@dimen/text_13sp" />

                    <EditText
                        android:id="@+id/Highest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/layout_20dp"
                        android:background="@null"
                        android:digits="@string/filter_vcode2"
                        android:hint="单笔最高"
                        android:textColor="@color/background_baise"
                        android:textColorHint="@color/money_name"
                        android:textSize="@dimen/text_14sp" />
                </LinearLayout>
            </LinearLayout>
            <!--交易说明-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:background="@color/edt_gray"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:text="交易说明"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />

                <EditText
                    android:id="@+id/edt_remark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="1. 订单有效期为15分钟，请您及时在有效期内付款并点击「标记为已付款」按钮，我才可以释放数字币给您2. 开始交易后数字币由系统锁定托管，请安心下单"
                    android:textColor="@color/background_baise"
                    android:textColorHint="@color/money_name"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>

            <!--是否同意-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckb"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:background="@drawable/ckb_money"
                    android:button="@null" />

                <TextView
                    android:id="@+id/tx_ckb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="我已知晓平台超时未处理订单会自动释放数字资产相关条例"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>
            <!--交易保证金0-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Bond"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:layout_weight="1"
                    android:text="交易保证金0"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />

                <TextView
                    android:id="@+id/severMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_20dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="成交后台将收取0%的手续费"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>
            <!--出售-->
            <Button
                android:id="@+id/Btn_buy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="@dimen/layout_10dp"
                android:background="@drawable/backbtn"
                android:text="出售"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

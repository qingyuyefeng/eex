<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edt_gray"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/LL_shangjia"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:background="@color/edt_gray"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/edt_gray">

                <TextView
                    android:id="@+id/name_T"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ll_fillet"
                    android:gravity="center"
                    android:text="å•†"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/btn_grd"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_msg_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/name_T"
                    android:background="@drawable/btn_grd"
                    android:textColor="@color/background_baise"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/edt_gray"
            android:paddingLeft="50dp"
            android:text="2018-12-12"
            android:textColor="@color/money_name"
            android:textSize="@dimen/text_10sp" />
    </LinearLayout>
</LinearLayout>

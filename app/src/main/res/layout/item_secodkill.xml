<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/item"
    android:background="@color/edt_gray"
    android:orientation="vertical">

    <!--秒杀专区   item_secodkill-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_37dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_biImge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconjiazaishibai" />
            </LinearLayout>

            <TextView
                android:id="@+id/Biname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:text="BTC"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tx_biQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:text="bitcoin"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@color/fenge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_secodkill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/secodkill_singlePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒杀单价:100.00USDT"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/layout_10dp"
                    android:background="@drawable/text_item"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tx_zhekou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_5dp"
                        android:layout_marginRight="@dimen/layout_5dp"
                        android:text="1折"
                        android:textColor="@color/appbar_background3"
                        android:textSize="@dimen/text_10sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/secodkill_marketPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_8dp"
                android:text="市场价格:200.00USDT"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/tx_timeType"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_8dp"
                android:text="以秒杀开始时间为准"
                android:textColor="@color/appbar_background3"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/secodkill_Nuber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_8dp"
                android:text="秒杀总量:300.00BTC"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_13sp" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="13dp"
                android:layout_marginBottom="@dimen/layout_10dp"
                android:layout_marginTop="@dimen/layout_8dp">

                <ProgressBar
                    android:id="@+id/pb_progressbar"
                    style="@style/StyleProgressBarMini"
                    android:layout_width="200dp"
                    android:layout_height="13dp"
                    android:background="@drawable/shape_progressbar_bg" />

                <TextView
                    android:id="@+id/tx_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="20%"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_10sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tx_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="00:00:00"
                    android:gravity="center|right"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tx_timeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:text="秒杀倒计时"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <Button
                    android:id="@+id/btn_go"
                    android:layout_width="88dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/layout_10dp"
                    android:layout_marginRight="@dimen/layout_10dp"
                    android:background="@drawable/backbtn"
                    android:text="立即抢购"
                    android:textColor="@color/background_baise" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_5dp"
        android:background="@color/appbar_background2" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f4f9"
    android:orientation="vertical">

    <com.eex.common.view.NewComTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="@string/level_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/layout_30dp">

        <TextView
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_area" />

        <TextView
            android:id="@+id/tv_country_area"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:background="@color/color_f2f4f9"
            android:gravity="center"
            android:text="@string/chinese_area"
            android:maxLines="1"
            android:paddingLeft="@dimen/layout_10dp"
            android:drawableRight="@mipmap/down_triangle"
            android:paddingRight="@dimen/layout_10dp"
            android:textColorHint="@color/color_cfd6e6" />

        <TextView
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="@string/family_name" />

        <EditText
            android:id="@+id/et_family_name"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:background="@color/color_f2f4f9"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/layout_10dp"
            android:textColorHint="@color/color_cfd6e6" />

        <TextView
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="@string/given_name" />

        <EditText
            android:id="@+id/et_given_name"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:background="@color/color_f2f4f9"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/layout_10dp"
            android:textColorHint="@color/color_cfd6e6" />

        <TextView
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="@string/sex" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_sex1"
                style="@style/check_text_view"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:text="@string/man" />

            <RadioButton
                android:id="@+id/rb_sex2"
                style="@style/check_text_view"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/woman" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_card_number"
            style="@style/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp"
            android:text="@string/id_card_number" />

        <EditText
            android:id="@+id/et_id_card_number"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_5dp"
            android:background="@color/color_f2f4f9"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/layout_10dp"
            android:textColorHint="@color/color_cfd6e6" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_30dp"
            android:layout_marginTop="@dimen/layout_30dp"
            android:background="@drawable/backbtn"
            android:text="@string/sure_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_30dp"
        android:text="@string/level_2_tip"
        android:textColor="@color/color_cc3333"
        android:textSize="@dimen/text_12sp" />

</LinearLayout>

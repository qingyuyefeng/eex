<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/appbar_background2"
    android:orientation="vertical">



    <!--邮箱验证-->
    <LinearLayout
        android:id="@+id/ll_Email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/cq_isnores" />

        <TextView
            android:id="@+id/tx_isname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/email_type"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/img_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_25dp"
            android:background="@drawable/cq_dowres"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_1dp"
        android:background="@color/login_login" />


    <!--手机验证-->
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_55dp"
        android:layout_below="@+id/ll_Email"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:background="@drawable/cq_isnores" />

        <TextView
            android:id="@+id/tx_phone"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/phone_type"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_16sp" />


    </LinearLayout>
</LinearLayout>

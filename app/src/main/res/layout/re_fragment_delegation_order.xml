<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trading_back">
    <LinearLayout
        android:id="@+id/ll_rv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="@dimen/layout_12dp"
                android:layout_height="@dimen/layout_12dp"
                android:background="@drawable/buy_up_tv_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:text="@string/buy"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_00a546"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="@dimen/layout_12dp"
                android:layout_height="@dimen/layout_12dp"
                android:background="@drawable/buy_down_tv_bg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:text="@string/sell"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_cc3333"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_choose_number"
                android:layout_width="@dimen/layout_82dp"
                android:layout_height="@dimen/layout_20dp"
                android:background="#001340"
                android:gravity="center"
                android:paddingRight="@dimen/layout_5dp"
                android:drawableRight="@mipmap/down_triangle"
                android:drawableTint="@color/color_4d6599"
                android:text="3位小数"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:orientation="horizontal">

           <android.support.v7.widget.RecyclerView
               android:id="@+id/rv_buy_in"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:overScrollMode="never"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_sell_out"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:overScrollMode="never"/>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2"
    android:orientation="vertical">
    <!-- 导航栏 -->


    <com.eex.common.view.ComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_25dp">

    </com.eex.common.view.ComTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edt_gray"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAddress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/layout_10dp" />

        <TextView
            android:id="@+id/cocinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:text="BTC"
            android:textColor="@color/background_baise"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/cocinAbbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:text="BTC"
            android:textColor="@color/money_name"
            android:textSize="@dimen/text_13sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:text="总资产"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/TotalAssets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_10dp"
                android:text="2000"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:text="可用余额"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/AvailableBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_10dp"
                android:text="2000"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginBottom="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:text="下单冻结"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/Freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_10dp"
                android:text="2000"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/LLTransfer"
                android:layout_width="@dimen/layout_80dp"
                android:layout_height="@dimen/layout_80dp"
                android:layout_margin="@dimen/layout_10dp"
                android:background="@drawable/btn_grd"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zijinhuazhuan2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="资金划转"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLFinanciaManagement"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/layout_10dp"
                android:background="@drawable/btn_grd"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/suocanglicai2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_5dp"
                    android:text="C2C交易"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

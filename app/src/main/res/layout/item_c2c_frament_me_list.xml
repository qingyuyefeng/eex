<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edt_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:text="订单号:"
            android:textColor="@color/money_name"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/orderID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_weight="1"
            android:text="1234567"
            android:textColor="@color/money_name"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_10dp"
            android:text="购买"
            android:textColor="@color/gred"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@color/fenge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/c2c_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/name_n"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ll_fillet"
                    android:gravity="center"
                    android:text="商"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/text_fillet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="张三"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/yirenzhengshangjia"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_10dp"
                android:text="12分13秒"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nuber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="交易总金额 7000CNY"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余付款时间"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/xiane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价 100CNY"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:text="数量100BTC"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_buy"
                android:layout_width="@dimen/layout_88dp"
                android:layout_height="28dp"
                android:background="@drawable/btn_greed"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

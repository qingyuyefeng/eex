<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_30dp"
    android:paddingRight="@dimen/layout_30dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:textColor="@color/color_4d6599"
            android:textSize="@dimen/text_16sp" />
        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_cfd6e6"
            android:textSize="@dimen/text_12sp"
            android:text="/USDT"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12983.28"
            android:textColor="@color/color_4d6599"
            android:textSize="@dimen/text_16sp" />
        <TextView
            android:id="@+id/tv_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_cfd6e6"
            android:textSize="@dimen/text_12sp"
            android:text="ï¿¥98454.80"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_increase_amount"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/corner_solid_small_green"
            android:padding="@dimen/layout_8dp"
            android:text="+5.20%"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>

</LinearLayout>
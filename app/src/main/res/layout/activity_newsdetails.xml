<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f2f4f9"
    android:orientation="vertical">

    <com.eex.common.view.NewComTitleBar
        android:id="@+id/comtitlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_resource="官方活动公告">

    </com.eex.common.view.NewComTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_10dp"
            android:paddingRight="@dimen/layout_10dp"
            android:paddingTop="@dimen/layout_30dp"
            android:paddingBottom="@dimen/layout_30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="关于GLS、AJA、VZCC兑换EBX用户锁仓公告"
                style="@style/normal_text"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                style="@style/thin_text"
                android:textSize="@dimen/text_10sp"
                tools:text="发布时间 : 2019-12-21 21:55:40"/>

            <TextView
                android:id="@+id/tv_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_20dp"
                android:lineSpacingExtra="@dimen/layout_2dp"
                style="@style/normal_text"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_news_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_10dp"
                android:layout_gravity="right"
                style="@style/thin_text"
                android:textSize="@dimen/text_10sp"
                tools:text="编辑：eex"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
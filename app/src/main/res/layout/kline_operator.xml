<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@mipmap/re_pop_index"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_master_operater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_16dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="主图"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/text_view_ma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="MA"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_boll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="BOLL"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_10sp" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linear_layout_attached_operater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_16dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="附图"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_view_macd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="MACD"

                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_kdj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="KDJ"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_rsi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:padding="10dp"
                android:text="RSI"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_wr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="WR"
                android:textColor="@color/mine_item_text"
                android:textSize="@dimen/text_10sp" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
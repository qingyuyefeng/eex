<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_marginTop_da">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_5dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7EBIT"
                android:textColor="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:id="@+id/tx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_5dp"
                android:layout_marginBottom="@dimen/layout_5dp"
                android:text="2018-08-07 18:12:01"
                android:textColor="@color/tra_main_login_text_gray"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tx_biName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BTC"
            android:textColor="@color/tra_main_login_text_gray"
            android:textSize="@dimen/text_12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="@dimen/layout_25dp"
                android:layout_margin="@dimen/layout_10dp"
                android:background="@drawable/backbtn"
                android:text="删除"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

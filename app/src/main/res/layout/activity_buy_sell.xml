<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbar_background2">

    <LinearLayout
        android:id="@+id/tra_myzoe_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:layout_marginTop="@dimen/layout_25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/title_c2c_buy_sell" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tra_myzoe_header"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>


    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tra_myzoe_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-1dp" />

    <ImageView
        android:id="@+id/img_Release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginBottom="@dimen/layout_10dp"
        android:src="@drawable/fabu" />
</RelativeLayout>

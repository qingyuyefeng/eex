<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/layout_10dp"
    android:paddingRight="@dimen/layout_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@color/activity_marginTop_da">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/layout_10dp">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="当前委托"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_20dp"
                android:layout_marginTop="@dimen/layout_10dp"
                android:gravity="left|center"
                android:text="是否撤销委托？"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_30dp"
                android:gravity="right"
                android:padding="@dimen/layout_15dp">


                <Button
                    android:id="@+id/button_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/backbtn"
                    android:text="确定"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/layout_20dp"
                    android:background="@drawable/shape_textview_bule"
                    android:text="取消"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_14sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


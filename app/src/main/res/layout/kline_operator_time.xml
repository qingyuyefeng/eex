<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@mipmap/trading_time_more"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_index_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_10dp"
            android:textColor="@android:color/darker_gray">

            <TextView
                android:id="@+id/text_view_one_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_5dp"
                android:text="5小时"
                android:textColor="@color/color_4d6599"
                android:textSize="@dimen/text_10sp" />


            <TextView
                android:id="@+id/text_view_five_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_5dp"
                android:text="1天"
                android:textColor="@color/color_4d6599"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_half_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_5dp"
                android:text="一周"
                android:textColor="@color/color_4d6599"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_one_week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_5dp"
                android:text="1月"
                android:textColor="@color/color_4d6599"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/text_view_one_mounth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/layout_5dp"
                android:text="一年"
                android:textColor="@color/color_4d6599"
                android:textSize="@dimen/text_10sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
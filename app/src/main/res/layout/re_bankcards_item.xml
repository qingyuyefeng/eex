<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/layout_10dp"
    android:background="@color/appbar_background2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_109dp"
        app:cardBackgroundColor="#099A8C"
        app:cardCornerRadius="@dimen/layout_7dp"
        app:cardElevation="@dimen/layout_10dp"
        app:contentPadding="@dimen/layout_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.eex.common.view.CircleImageView
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="@dimen/layout_50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="中国农业银行"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_bank_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    tools:text="**** **** **** 1234"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_30dp"
        android:background="@color/color_a50000"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14sp"
        android:text="@string/delete" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_base_toolber"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_48dp"
    android:background="@color/trans"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/comtitlebar"
        android:layout_width="@dimen/layout_60dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:src="@drawable/cq_lift"
            android:visibility="visible" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_buy"
            style="@style/tab_style"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="买入" />

        <RadioButton
            android:id="@+id/rb_sell"
            style="@style/tab_style"
            android:layout_height="match_parent"
            android:text="卖出" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LLme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/Img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dingdan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_ppowd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shaixuan" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
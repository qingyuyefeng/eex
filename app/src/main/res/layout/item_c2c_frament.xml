<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:background="@color/appbar_background2"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/c2c_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!--支付宝 姓名 微信-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/name_n"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ll_fillet"
                    android:gravity="center"
                    android:text="张"
                    android:textColor="@color/background_baise"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/text_fillet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="张三"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />

            <ImageView
                android:id="@+id/img_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_8dp"
                android:src="@drawable/yirenzhengshangjia"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:src="@drawable/zhifubao"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/yinghangka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:src="@drawable/yinhangka"
                android:visibility="gone" />
        </LinearLayout>

        <!--数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nuber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数量 1822.12123BTC"
                android:textColor="@color/money_name"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥2222.88"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--限额-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/xiane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限额 100.00-200.00CNY"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_10dp"
                    android:text="交易次数2005/成交率95%"
                    android:textColor="@color/money_name"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>
            <!--买入-->
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="@dimen/layout_88dp"
                android:layout_height="@dimen/layout_32dp"
                android:background="@drawable/btn_greed"
                android:gravity="center"
                android:text="买入"
                android:textColor="@color/background_baise"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
